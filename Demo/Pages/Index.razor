@inherits ViewportComponentBase
@page "/"

<div class="viewport-container zindex-bottom">
    <div class="fs-large">
        <p>
            Width: <span class="gray">@Viewport.ViewportSize.Width</span>
        </p>
        <p>
            Height: <span class="gray">@Viewport.ViewportSize.Height</span>
        </p>
        
        <p>
            Breakpoint: <span class="gray">@Viewport.ViewportSize.Breakpoint</span>
        </p>
    </div>
</div>

@if (!Viewport.IsRendered)
{
    <div class="viewport-container zindex-top bg-white">
    <div class="fs-large">
        <p class="gray">
            Loading ...
        </p>
    </div>
</div>
}